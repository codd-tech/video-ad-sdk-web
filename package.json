{
  "name": "@codd-tech/video-ad-sdk",
  "description": "Web Advertising Platform SDK",
  "repository": "https://github.com/codd-tech/video-ad-sdk-web",
  "homepage": "https://github.com/codd-tech/video-ad-sdk-web",
  "author": "n.kupreev@codd.tech",
  "version": "0.1.6",
  "keywords": [
    "advertisement",
    "advertisement sdk",
    "advertisement web",
    "advertisement telegram"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "pretty": "prettier --write \"./**/*.{ts,tsx,json,css,html}\"",
    "prepare": "husky",
    "lint-staged": "lint-staged --config ./lint-staged.config.cjs",
    "ts-check": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.0.2",
    "@emotion/react": "^11.13.3",
    "@kinescope/player-iframe-api-loader": "^0.0.17",
    "@tanstack/react-query": "^5.59.16",
    "add": "^2.0.6",
    "compose-function": "^3.0.3",
    "ky": "^1.7.2",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "yarn": "^1.22.22",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tanstack/eslint-plugin-query": "^5.59.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/add": "^2",
    "@types/compose-function": "^0.0.33",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/telegram-web-app": "^7.10.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
